<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Tribe.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Tribe.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/gray</item>
        <item name="elevation">8dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.Tribe.ButtonCircle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconSize">32dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TribeManager.Circle</item>
    </style>

    <style name="Widget.Tribe.ButtonCircle.Secondary">
        <item name="iconTint">@color/black</item>
        <item name="iconSize">16dp</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="Widget.Tribe.ButtonFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:padding">@dimen/spacing_12dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">@style/TextAppearance.TribeManager.Text.SubHeadline</item>
    </style>

    <style name="Widget.Tribe.ButtonSmallFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_12dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_6dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TribeManager.ButtonSmall</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TribeManager.Text.Footnote</item>
    </style>

    <style name="Widget.Tribe.ButtonSmallOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_12dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_6dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TribeManager.ButtonSmall</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TribeManager.Text.Footnote</item>
    </style>

    <style name="Widget.Tribe.ButtonBorderLess" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/border_less_btn_text_color</item>
        <item name="android:textAppearance">@style/TextAppearance.TribeManager.Text.Body</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Tribe.NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bnv_item_foreground</item>
        <item name="itemTextColor">@color/bnv_item_foreground</item>
    </style>

    <style name="Widget.Tribe.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

</resources>
