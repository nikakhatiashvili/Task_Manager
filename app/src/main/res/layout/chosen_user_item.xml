<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/email"
        style="@style/TextAppearance.TribeManager.Text.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nikaKhatiashvili"
        android:textColor="@color/primary_gray"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        style="@style/TextAppearance.TribeManager.Text.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nikolozi"
        android:textColor="@color/primary_gray"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <ImageView
        android:id="@+id/removeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_24dp"
        android:src="@drawable/baseline_person_remove_24"
        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/email" />


</androidx.constraintlayout.widget.ConstraintLayout>
